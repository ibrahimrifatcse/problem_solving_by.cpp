//palindrome creator. if you give integer you can same line of palindrome number 

#include <iostream>

using namespace std;

int main() {

int n;

cout << "Enter the number of rows : ";
//take input from user
cin >> n;
//condition
for(int i = 1; i <= n; i++)
{
for(int j = 1; j <= i; j++)
{
cout << j << " ";
}
for(int k = i-1; k >= 1; k--)
{
cout << k << " ";
}
cout << endl;
}
return 0;
}
